{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "eslint",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"label": "eslint: lint whole folder",
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "watch",
			"command": "${workspaceRoot}/node_modules/.bin/babel src --out-dir dist -w --source-maps",
			"group": "build",
			"isBackground": true
		}
		
	]
}